{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Database": {
    "Provider": "PostgresSQL",
    "Postgres": {
      "ConnectionString": "Host=localhost;Port=5432;Database=flockwise_db;Username=flockwise_user;Password=password123",
      "CommandTimeout": 30,
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 5
    },
    "Sqlite": {
      "ConnectionString": "Data Source=flockwise.db",
      "DatabasePath": "flockwise.db"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "your-super-secret-jwt-key-that-is-at-least-32-characters-long",
    "Issuer": "FlockWise.API",
    "Audience": "FlockWise.Client"
  }
}
